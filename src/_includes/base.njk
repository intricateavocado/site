  <script>
  function lightToggle() {
   var element = document.body;
   var element_footer = document.footer;
   element.classList.toggle("light-mode");
   element_footer.classList.toggle("light-mode");
  }
</script>
  <body>
    <div class="content">
      <h1><a href="/" style="color:deeppink">/uncenter</a><a href="{{title}}" style="color:violet">{{title}}</a></h1>
      {{ content | safe }}
    </div>
  </body>
    <div class="content">
